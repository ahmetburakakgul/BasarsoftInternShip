@model IEnumerable<EntityLayer.Concrete.Comment>
@{
    ViewBag.Title = "GetCommentByNews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content p-2">
    <div class="container-fluid">
        <div class="card p-3">
            <div class="row">
                <div class="col-md-12">
                    <!-- The time line -->
                    <div class="timeline">
                        @foreach (var item in Model)
                        {
                            <!-- timeline time label -->
                            <div class="time-label">
                                <span class="bg-success"> @(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</span>
                            </div>
                            <!-- /.timeline-label -->
                            <!-- timeline item -->
                            <div>
                                <i class="fas fa-comments bg-yellow"></i>
                                <div class="timeline-item">
                                    <h3 class="timeline-header"><a href="#">@item.FullName</a> @item.EmailAddress</h3>

                                    <div class="timeline-body">
                                        @item.CommentContent
                                    </div>
                                    <div class="timeline-footer">
                                        <a class="btn btn-primary btn-sm"><i class="fas fa-info-circle"></i></a>
                                        <a class="btn btn-danger btn-sm"><i class="fas fa-trash-restore-alt"></i></a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- Timelime example  -->
        
    </div>
    <!-- /.timeline -->

</section>
<!-- /.content -->