@model IEnumerable<EntityLayer.Concrete.Author>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<section class="content p-2">
    <div class="container-fluid p-3">
        <div class="card">
            <div class="card-body">
                <div class="row gutters-sm pt-lg-5">
                    @foreach (var item in Model)
                    {
                        <input type="hidden" class="form-control" name="id" value="@item.id">
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body" style="height:400px">
                                    <div class="d-flex flex-column align-items-center text-center mt-4">
                                        @if (item.User.Image == null)
                                        {
                                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Image" class="img-fluid" width="150">

                                        }
                                        else
                                        {
                                            <img src="@Url.Content(String.Format(item.User.Image))" alt="Image" class="img-fluid" width="150">
                                        }
                                        <div class="mt-3">
                                            <h4>@item.User.Name @item.User.Surname</h4>
                                            <p class="text-muted font-size-sm">@item.User.ShortAbout</p>
                                            <p class="text-muted font-size-sm">@item.User.Role.Roles</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body" style="height:400px">

                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Adı ve Soyadı :</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @item.User.Name @item.User.Surname
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Email :</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary"> @item.User.EmailAddress</div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Meslek :</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary"> @item.AuthorCategory.CategoryName</div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Telefon Numarası :</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            +(90) @item.User.PhoneNumber
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Hakkında :</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @item.User.About
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <a class="btn btn-info " href="@Url.Action("UpdateUserProfile/"+item.id,"UserAuthor")"><i class="fa fa-edit"></i> Düzenle</a>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div><!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</section>

