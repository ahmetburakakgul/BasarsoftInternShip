@model IEnumerable<EntityLayer.Concrete.User>
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row gutters-sm pt-lg-5" style="margin-bottom:278px">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body"style="height:350px">
                    <div class="d-flex flex-column align-items-center text-center">
                        @if (item.Image == null)
                        {
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Image" class="img-fluid" width="150">

                        }
                        else
                        {
                            <img src="@Url.Content(String.Format(item.Image))" alt="Image" class="img-fluid" width="150">
                        }
                        <div class="mt-3">
                            <h4>@item.Name @item.Surname</h4>
                            <p class="text-muted font-size-sm">@item.Role.Roles</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body" style="height:350px">

                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Adı ve Soyadı :</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @item.Name @item.Surname
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Email :</h6>
                        </div>
                        <div class="col-sm-9 text-secondary"> @item.EmailAddress</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Telefon Numarası :</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            +(90) @item.PhoneNumber
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Hakkında :</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @item.About
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-12">
                            <a class="btn btn-info " href="@Url.Action("ProfileEdit/"+item.id,"UserMember")"><i class="fa fa-edit"></i> Düzenle</a>
                            <a class="btn btn-warning " href="@Url.Action("ToBeAWriter/"+item.id,"UserMember")"><i class="fa fa-hand-o-up"></i> Yazar Olmak İstiyorum</a>
                        </div>
                        
                    </div>

                </div>
            </div>
        </div>
    }
</div>