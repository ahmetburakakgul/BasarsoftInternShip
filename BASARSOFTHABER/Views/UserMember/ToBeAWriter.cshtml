@model EntityLayer.Concrete.User
@{
    ViewBag.Title = "ToBeAWriter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="py-5">
    <div class="container px-5">
        <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
            @using (Html.BeginForm("ToBeAWriter", "UserMember", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.id, new { @name = "id" })
                <div class="text-center mb-5">
                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
                    <img class="rounded-circle" src="@Url.Content(String.Format(Model.Image))" width="150" height="150" />
                    <p class="lead fw-normal text-muted mb-0">Yazar Olmak İstiyorsanız Lütfen Yazar Türünü Seçin ve Formu Bize Gönderin</p>
                </div>
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-8 col-xl-6">

                        <div class="row">
                            <div class="col-6">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @readonly = "readonly", @name = "Name" })
                                    <label for="name">İsim</label>
                                    <div class="invalid-feedback" data-sb-feedback="name:required">İsim Zorunlu.</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", @readonly = "readonly" })
                                    <label for="name">Soyisim</label>
                                    <div class="invalid-feedback" data-sb-feedback="name:required">Soyisim Zorunlu.</div>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control", @readonly = "readonly" })
                            <label for="email">E-mail</label>
                            <div class="invalid-feedback" data-sb-feedback="email:required">E-posta adresi zorunlu.</div>
                            <div class="invalid-feedback" data-sb-feedback="email:email">E-posta geçerli değil.</div>
                        </div>
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", @readonly = "readonly" })
                            <label for="phone">Telefon numarası</label>
                            <div class="invalid-feedback" data-sb-feedback="phone:required">Telefon numarası zorunlu.</div>
                        </div>
                        <div class="form-floating mb-3">
                            @Html.DropDownList("AuthorCategories", (List<SelectListItem>)ViewBag.authorcat, "Yazar Türü Seçiniz", new { @class = "form-control" })
                            <label for="phone">Yazar Türü</label>
                            <div class="invalid-feedback" data-sb-feedback="phone:required">Telefon numarası zorunlu.</div>
                        </div>
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(x => x.ShortAbout, new { @class = "form-control", @name = "ShortAbout" })
                            <label for="phone">Yetenekleriniz : Spor/Futbol/Vs</label>
                            <div class="invalid-feedback" data-sb-feedback="phone:required">Zorunlu Alan.</div>
                        </div>
                        <div class="form-floating mb-3">
                            @Html.TextAreaFor(x => x.About, 10, 30, new { @class = "form-control", @style = "height:190px" })
                            <label for="phone">Hakkında</label>
                            <div class="invalid-feedback" data-sb-feedback="phone:required">Zorunlu Alan.</div>
                        </div>
                        <div class="d-none" id="submitSuccessMessage">
                            <div class="text-center mb-3">
                                <div class="fw-bolder">Form submission successful!</div>
                                To activate this form, sign up at
                                <br>
                                <a href="https://startbootstrap.com/solution/contact-forms">https://startbootstrap.com/solution/contact-forms</a>
                            </div>
                        </div>
                        <div class="d-none" id="submitErrorMessage"><div class="text-center text-danger mb-3">Bilgiler Göderilirken Hata Oluştu!</div></div>
                        <div class="d-grid"><button class="btn btn-danger btn-lg" name="info" type="submit">Bilgilerimi Gönder</button></div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

